{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true, // Enable decorators
    "emitDecoratorMetadata": true   // Emit metadata for decorators
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
